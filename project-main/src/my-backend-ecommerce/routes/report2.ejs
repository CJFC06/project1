<html lang="en">
  <head>
    <style>
      table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }
      td,
      th {
        border: 1px solid #dddd;
        text-align: left;
        padding: 8px;
      }
    </style>
  </head>
  <body>
    <h3 style="text-align: center">Cafe Management System</h3>
    <table>
      <tr>
        <th>Name: <%= name %></th>
        <th>Email: <%= email %></th>
      </tr>
      <tr>
        <th>Contact Number: <%= contactNumber %></th>
        <th>Payment Method: <%= paymentMethod %></th>
      </tr>
    </table>
    <h3>Product Details:</h3>
    <table>
      <tr>
        <th class="pl0 text-start">Name</th>
        <th class="text-center">Category</th>
        <th class="text-center">Quantity</th>
        <th class="text-end">Price</th>
        <th class="text-end">Sub Total</th>
      </tr>
      <% if(productDetail.length > 0) { %> <% productDetail.forEach(product => {
      %>
      <tr class="tr">
        <td><%= product.name %></td>
        <td><%= product.category %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.total %></td>
      </tr>
      <%});%> <%}%>
    </table>
    <h3>Grand Total: <%= totalAmount %></h3>
  </body>
</html>
